<div class="container-fluid">
  <div class="page-header">
    <h3>Route</h3>
    <%= @route.path %>
  </div>
  <table width="100%">
  	<thead>
 		  <tr>
        <th width="50%">
          Fixture
        </th>
        <th class="text-center">
          Route Type
        </th>
        <th class="text-center">  
          Host
        </th>
    	</tr>
    </thead>
    <tbody>
		<tr>
      <td>
       <textarea rows="25" cols="130">
        <%=
        begin
          json_object = JSON.parse @route.fixture
          JSON.pretty_generate(json_object)
        rescue
          @route.fixture
        end
         %>
       </textarea>
      </td>
      <td align="center">
        <%= @route.route_type %>
      </td>
      <td align="center">
        <%= @route.host %>
      </td>
	 </tbody>
  </table>
  <a class="btn btn-default" href="/features/<%= @flow[:feature_id] %>/flows/<%= @scenario[:flow_id]%>/scenarios/<%= @scenario[:id]%>">Back</a>
</div>