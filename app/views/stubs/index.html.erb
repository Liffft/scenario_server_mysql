<%- model_class = Stub -%>
<meta http-equiv="refresh" content="5">
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:request_url) %></th>
      <th><%= model_class.human_attribute_name(:route_type) %></th>
      <th><%= model_class.human_attribute_name(:request_body) %></th>
      <th><%= model_class.human_attribute_name(:response) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:host) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @stubs.each do |stub| %>
      <tr>
        <td><%= link_to stub.id, stub_path(stub) %></td>
        <td><%= stub.request_url %></td>
        <td><%= stub.route_type %></td>
        <td><%= stub.request_body %></td>
        <td><%= stub.response %></td>
        <td><%= stub.status %></td>
        <td><%= stub.host %></td>
        <td><%=l stub.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_stub_path(stub), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      stub_path(stub),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_stub_path,
            :class => 'btn btn-primary' %>
